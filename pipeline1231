pipeline {
    agent any

    stages {
        stage('git-install') {
            steps {
            git branch: 'main', url: 'https://github.com/SanjayTomar22/pikachu.git'
            }
        }
        stage('docker-install') {
            steps {
                   sh '''
           sudo yum install docker -y
           sudo systemctl start docker
           sudo systemctl enable docker
            '''
            }
        }
                stage ('docker-build') {
         steps {
            sh '''
            sudo docker build -t myimg .
            '''
         }
      }
    }
}
